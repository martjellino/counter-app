{
  "extends": [
    "next/core-web-vitals",
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "airbnb",
    "airbnb-typescript"
  ],
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "rules": {
    "@typescript-eslint/no-unused-vars": [
      "error",
      {
        "vars": "all",
        "args": "all",
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_"
      }
    ],
    "semi": "error",
    "no-console": "error",
    "camelcase": "error",
    "eqeqeq": "error",
    "react/react-in-jsx-scope": "off",
    "linebreak-style": ["off", "windows"],
    "no-trailing-spaces": "off"
  }
}
